{
  "name": "cloud-run",
  "version": "1.0.0",
  "mcpServers": {
    "cloud-run": {
      "command": "npx",
      "args": ["-y", "@google-cloud/cloud-run-mcp"]
    }
  },
  "settings": [
    {
      "name": "Project ID",
      "description": "GCP Project ID",
      "envVar": "GOOGLE_CLOUD_PROJECT"
    },
    {
      "name": "Region",
      "description": "GCP Region",
      "envVar": "GOOGLE_CLOUD_REGION"
    }
  ],
  "contextFileName": "gemini-extension/GEMINI.md"
}
